<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SpeechTranscriptionApp.Views.MainPage"
             xmlns:viewmodel="clr-namespace:SpeechTranscriptionApp.ViewModels"
             x:DataType="viewmodel:MainPageViewModel">
    <ContentPage.Resources>
        <Style x:Key="ReadOnlyEditorStyle" TargetType="Editor">
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="TextColor" Value="White"/>
            <Setter Property="BackgroundColor" Value="Transparent"/>
            <Setter Property="Margin" Value="-5"/>
            <!-- Negative margin to allow the parent Border to handle padding -->
            <Setter Property="AutoSize" Value="TextChanges"/>
            <!-- Allows the editor to grow with content -->
            <Setter Property="VerticalOptions" Value="FillAndExpand"/>
            <Setter Property="HorizontalOptions" Value="FillAndExpand"/>
        </Style>
    </ContentPage.Resources>

    <Grid RowDefinitions="*, Auto, Auto"
          ColumnDefinitions="10, *, 10">

        <CollectionView ItemsSource="{Binding RecognizedPhrases}"
                        x:Name="PhraseHistory"
                        Grid.Row="0"
                        Grid.Column="1"
                        BackgroundColor="DimGray">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="{x:Type x:String}">
                    <Editor Text="{Binding .}"
                           FontSize="15"
                           TextColor="White"
                           Style="{StaticResource ReadOnlyEditorStyle}" />
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Border Grid.Row="1"
                Grid.Column="1">
            <Label Text="{Binding CurrentPhrase}"
                   BackgroundColor="DimGray"
                   Padding="10"/>
        </Border>

        <Grid Grid.Row="2"
              Grid.Column="0"
              Grid.ColumnSpan="3"
              Padding="15"
              Margin="15">
            <HorizontalStackLayout HorizontalOptions="Center"
                                   Spacing="20">
                <Button Text="{Binding StartStopButtonText}"
                        Command="{Binding ToggleTranscriptionCommand}"
                        WidthRequest="180"/>

                <Button Text="Configs"
                        Command="{Binding ChangeConfigsCommand}"
                        WidthRequest="180" />
            </HorizontalStackLayout>
        </Grid>
    </Grid>
</ContentPage>