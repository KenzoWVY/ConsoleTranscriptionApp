<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SpeechTranscriptionApp.Views.ConfigsPage"
             xmlns:viewmodel="clr-namespace:SpeechTranscriptionApp.ViewModels"
             x:DataType="viewmodel:ConfigsPageViewModel"
             Title="Configurations">

    <Grid RowDefinitions="*, *, *"
          ColumnDefinitions="*, *, *"
          WidthRequest="500">

        <Label Grid.Row="0"
               Grid.Column="0"
               Text="Azure Key"
               HeightRequest="50" />
        <Entry Grid.Row="0"
               Grid.Column="1"
               Grid.ColumnSpan="2"
               HeightRequest="50"/>

        <Label Grid.Row="1"
               Grid.Column="0"
               Text="Azure Region"
               HeightRequest="50" />
        <Entry Grid.Row="1"
               Grid.Column="1"
               Grid.ColumnSpan="2"
               HeightRequest="50" />

        <Button Grid.Row="3"
                HeightRequest="100"/>
    </Grid>
</ContentPage>